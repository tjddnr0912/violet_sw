# Google Gemini API Configuration
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# News Fetching Settings
# NEWS_HOURS_LIMIT: Only fetch news published within this many hours (default: 24)
# Set to 48 for 2 days, 72 for 3 days, etc.
NEWS_HOURS_LIMIT=24

# News API Configuration (Optional)
# Get your API key from: https://newsapi.org/
NEWS_API_KEY=your_news_api_key_here

# Google Blogger Configuration (API-based auto-posting)
# Get credentials from: https://console.cloud.google.com/
BLOGGER_ENABLED=false
BLOGGER_BLOG_ID=your_blog_id_here
BLOGGER_CREDENTIALS_PATH=./credentials/blogger_credentials.json
BLOGGER_TOKEN_PATH=./credentials/blogger_token.pkl
BLOGGER_LABELS=뉴스,AI요약,자동화
BLOGGER_IS_DRAFT=false

# Telegram Notification Configuration
# Get bot token from @BotFather, chat ID from @userinfobot
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
