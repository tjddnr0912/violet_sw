#!/bin/bash

# 비트코인 다중 시간대 전략 v2.0 GUI 실행 스크립트

set -e

# 색상 정의
GREEN='\033[0;32m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
BOLD='\033[1m'
NC='\033[0m'

# 로고 표시
echo -e "${BLUE}${BOLD}"
echo "╔══════════════════════════════════════════════════════════════════╗"
echo "║        🚀 비트코인 다중 시간대 전략 v2.0 GUI                     ║"
echo "║           Bitcoin Multi-Timeframe Strategy v2                    ║"
echo "╚══════════════════════════════════════════════════════════════════╝"
echo -e "${NC}"

echo -e "${CYAN}전략 개요:${NC}"
echo "  📊 시장 체제 필터: 일봉 EMA 50/200 골든크로스"
echo "  🎯 진입 신호: 4시간봉 점수 시스템 (3점 이상)"
echo "     • BB 하단 터치: +1점"
echo "     • RSI 과매도 (<30): +1점"
echo "     • 스토캐스틱 RSI 교차 (<20): +2점"
echo "  💼 포지션 관리: 50% 분할 진입/청산"
echo "  📉 손절: 샹들리에 엑시트 (ATR 3배 추적)"
echo ""

# 가상환경 활성화 (있는 경우)
if [[ -d ".venv" ]]; then
    echo -e "${GREEN}✅ 가상환경 활성화${NC}"
    source .venv/bin/activate
fi

# v2 GUI 실행
echo -e "${BLUE}🚀 v2 GUI를 시작합니다...${NC}"
echo ""

cd 001_python_code/ver2
python3 run_gui_v2.py
